<div class="form-option-details">
  <% unless @hide_other_regions %>
  <section>
    <div>
      <span class="required">All mentoring opportunities are currently virtual. However, Braven knows the power of local connections. If you would like a mentee from a particular region, please indicate which one below. If you live in a different part of the country, select Other.</span>
      <br />
      <%= render :partial => 'areas', :locals => { :f => f, :list => 'pm_regions' } %>
    </div>
  </section>
  <% else %>
    <%= f.hidden_field :bz_region, :value => params[:user][:bz_region] %>
  <% end %>

  <section>
    <div class="required">
      Phone number:
    </div>
    <div class="col-sm-5">
       <%= f.text_field :phone, 'class' => 'form-control short', 'title' => 'phone number including area code', :required => 'required', 'pattern' => '.{10,15}', 'type' => 'tel' %>
    </div>
  </section>

  <section>
    <div class="required">
      Profession / job title:
    </div>
    <div class="col-sm-7">
      <%= f.text_field :profession, :class => 'form-control', :maxlength => '70', :required => 'required' %>
    </div>
  </section>
  <section>
    <div class="required">
      Your company or organization:
    </div>
    <div class="col-sm-7">
      <%= f.text_field :company, :class => 'form-control', :maxlength => '70', :required => 'required' %>
    </div>
  </section>
  <section>
    <div class="required">
      Industry i.e. if you work in Tech, select "Tech":
    </div>
    <div class="col-sm-7">
      <select class="form-control" required="required" name="employer_industry">
        <option value=""></option>
          <%= options_for_select(@industries) %>
       </select>
    </div>  
  </section>
  <section>
    <div class="required">
      Functional area i.e. if you work in recruiting, select "Employment / Human Resources":
    </div>
    <div class="col-sm-7">
      <select class="form-control" required="required" name="functional_area">
        <option value=""></option>
        <%= options_for_select(@job_functions) %>
      </select>
    </div>  
  </section>
  
  <section>
    <div class="required">
      Please create a password to protect any personal information you may provide us.
    </div>
    <div class="col-sm-7">
      <%= f.password_field :password, :class => 'form-control', placeholder: 'Create a password', pattern: '.{4,}', title: 'make a password at least four characters long', :required => 'required' %>
    </div>
  </section>

</div>

