<div class="container-fluid">
  <section>
    <h1>Change Password</h1>

    <%= render "shared/form_errors" %>

    <%= form_tag("change_password", method: "post") do %>
      <div class="form-group">
        <%= label_tag(:password, 'New Password:') %>
        <%= password_field_tag(:password, nil, :autofocus=>'autofocus', :required=>'required', :class=>'form-control') %>
      </div>
      <div class="form-group">
        <%= label_tag(:confirm_password, 'Confirm New Password:') %>
        <%= password_field_tag(:confirm_password, nil, :required=>'required', :class=>'form-control') %>
      </div>
      <%= submit_tag("Change Password") %>
    <% end %>
  </section>
</div>
