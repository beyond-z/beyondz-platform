<h1>Forgot your password?</h1>

<%= render "shared/form_errors" %>

<p>Enter your e-mail address here and we'll send you a reset token.</p>

<%= form_tag("forgot_password", method: "post") do %>
  <div class="form-group">
    <%= label_tag(:email, 'Email address:') %>
    <%= text_field_tag(:email, nil, :type=>'email', :autofocus=>'autofocus', :required=>'required') %>
  </div>
  <%= submit_tag("Reset Password") %>
<% end %>
