                    <%= f.text_area :why_not_talk_to_fellow %>
                </div>
              </div>
              <div>
              Anything else you'd like us to know?
              <br />
              <%= f.text_area :champion_comments %>
              </div>
            <%= f.submit 'Save', :class => 'button-primary' %>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>
